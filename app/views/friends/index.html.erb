<table class="table table-striped">
  <thead class="table-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">First name</th>
    <th scope="col">Last name</th>
    <th scope="col">Email</th>
    <th scope="col">Phone</th>
    <th scope="col">Twitter</th>
    <th scope="col">Instagram</th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <%#= render friend %>
    <tr>
      <th scope="row">
        <%= friend.id %>
      </th>
      <td>
        <%= friend.first_name %>
      </td>
      <td>
        <%= friend.last_name %>
      </td>
      <td>
        <%= friend.email %>
      </td>
      <td>
        <%= friend.phone %>
      </td>
      <td>
        <%= friend.twitter %>
      </td>
      <td>
        <%= friend.instagram %>
      </td>
      <td>
        <%= link_to "Show", friend %>
      </td>
      <td>
        <%= link_to "Edit", edit_friend_path(friend) %>
      </td>
      <td>
        <%= button_to "Destroy", friend, method: :delete, class: "btn btn-outline-danger btn-sm" %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>


<button type="button" class="btn btn-secondary"><%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %></button>